FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
dimensions      [0 2 -1 0 0 0 0];
internalField   uniform 0.02; 
boundaryField
{
    WALL_TOP
    {
        type            groovyBC;
        valueExpression "0.21*k*k*tpphi/epsilon";
        value           uniform 1e-15;
    }
    WALL_BOTTOM
    {
        type            groovyBC;
       	valueExpression "0.21*k*k*tpphi/epsilon";
        value           uniform 1e-15;
    }
    frontAndBackPlanes
    {
        type            slip;
    }
    INOUT_CYC
    {
        type            cyclic;
        value           uniform 0.02; 
    }
}
